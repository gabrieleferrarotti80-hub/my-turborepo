

{
  "name": "my-turborepo",
  "private": true,
  "packageManager": "pnpm@10.18.0",
 "scripts": {
  "build": "turbo run build",
  "dev": "turbo run dev",
  "dev:frontend": "turbo run dev --filter=gestionale-vite",
  "dev:backend": "node apps/gestionale/src/backend/server.js",
  "lint": "turbo run lint",
  "format": "prettier --write \"**/*.{ts,tsx,md}\"",
  "check-types": "turbo run check-types"
},
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "dependency-cruiser": "^17.0.2",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.18",
    "turbo": "^2.5.8",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": "20.x"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@faker-js/faker": "^10.1.0",
    "firebase-admin": "^13.5.0"
  }
}