{
  "version": 2,
  "installCommand": "pnpm install",
  "builds": [
    {
      "src": "apps/gestionale/src/backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "apps/gestionale/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "apps/gestionale/src/backend/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "apps/gestionale/dist/index.html"
    }
  ]
}